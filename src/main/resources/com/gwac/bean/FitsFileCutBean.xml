<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
  
  <bean id="ffcService" class="com.gwac.service.FitsFileCutServiceImpl">
    <property name="ffDao" ref="ffDao" />
    <property name="ffcDao" ref="ffcDao" />
    <property name="otlv2Dao" ref="otbDao" />
    <property name="dpmDao" ref="dpmDao" />
    <property name="successiveImageNumber" value="${gwac.successive.image.number}" />
    <property name="headTailCutNumber" value="${gwac.image.head.tail.cut.number}" />
  </bean>
  
  <bean class="com.gwac.action.GetCutImageList"  scope="prototype">
    <property name="ffcDao" ref="ffcDao" />
  </bean>
  
  <bean class="com.gwac.action.GetOtImageList"  scope="prototype">
    <property name="ffcDao" ref="ffcDao" />
    <property name="obDao" ref="otbDao" />
  </bean>
	
  <bean id="ffcDao" class="com.gwac.dao.FitsFileCutDAOImpl" >
    <property name="sessionFactory" ref="sessionFactory" />
    <property name="clazz">
      <value>com.gwac.model.FitsFileCut</value>
    </property>
  </bean>
	
</beans>