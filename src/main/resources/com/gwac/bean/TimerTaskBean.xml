<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

  <bean id="dataStoreTask" class="com.gwac.util.DataStoreTimerTask" >
    <property name="otORService" ref="otORService" /> 
  </bean>

  <!-- Spring Quartz -->
  <!--bean name="runMeJob" class="org.springframework.scheduling.quartz.JobDetailBean">

      <property name="jobClass" value="com.mkyong.common.RunMeJob" />

      <property name="jobDataAsMap">
        <map>
          <entry key="runMeTask" value-ref="runMeTask" />
        </map>
      </property>
  </bean-->

  <bean id="dataStoreJob" 
        class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean"> 
    <property name="targetObject" ref="dataStoreTask" /> 
    <property name="targetMethod" value="storeOT" /> 
  </bean> 

  <bean id="addMissedCutImageJob" 
        class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean"> 
    <property name="targetObject" ref="ffcService" /> 
    <property name="targetMethod" value="addMissedCutImages" /> 
  </bean> 

  <bean id="dataBackupJob" 
        class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean"> 
    <property name="targetObject" ref="dataBackupService" /> 
    <property name="targetMethod" value="backupData" /> 
  </bean> 

  <!-- Simple Trigger, run every 15 seconds -->
  <bean id="dataStoreTrigger" 
        class="org.springframework.scheduling.quartz.SimpleTriggerBean">
    <property name="jobDetail" ref="dataStoreJob" />
    <property name="repeatInterval" value="15000" />
    <property name="startDelay" value="10000" />
  </bean>
  
  <bean id="addMissedCutImageTrigger" 
        class="org.springframework.scheduling.quartz.SimpleTriggerBean">
    <property name="jobDetail" ref="addMissedCutImageJob" />
    <property name="repeatInterval" value="75000" />
    <property name="startDelay" value="15000" />
  </bean>

  <!-- Cron Trigger, every day 10 o'clock -->
  <bean id="dataBackupTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
    <property name="jobDetail" ref="dataBackupJob" />
    <property name="cronExpression" value="0 0 10 * * ?"/>
  </bean>

  <bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
    <property name="jobDetails">
      <list>
        <ref bean="dataStoreJob" />
        <ref bean="addMissedCutImageJob" />
        <ref bean="dataBackupJob" />
      </list>
    </property>
    <property name="triggers">
      <list>
        <ref bean="dataStoreTrigger" />
        <ref bean="addMissedCutImageTrigger" />
        <ref bean="dataBackupTrigger" />
      </list>
    </property>
  </bean>

</beans>