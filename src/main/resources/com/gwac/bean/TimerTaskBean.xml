<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

  <bean id="dataStoreTask" class="com.gwac.util.DataStoreTimerTask" >
    <property name="otORService" ref="otORService" /> 
  </bean>

  <!-- Spring Quartz -->
  <!--bean name="runMeJob" class="org.springframework.scheduling.quartz.JobDetailBean">

      <property name="jobClass" value="com.mkyong.common.RunMeJob" />

      <property name="jobDataAsMap">
        <map>
          <entry key="runMeTask" value-ref="runMeTask" />
        </map>
      </property>
  </bean-->

  <bean id="dataStoreJob" 
        class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean"> 
    <property name="targetObject" ref="dataStoreTask" /> 
    <property name="targetMethod" value="storeOT" /> 
  </bean> 

  <bean id="addMissedCutImageJob" 
        class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean"> 
    <property name="targetObject" ref="ffcService" /> 
    <property name="targetMethod" value="addMissedCutImages" /> 
  </bean> 

  <bean id="dataBackupJob" 
        class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean"> 
    <property name="targetObject" ref="dataBackupService" /> 
    <property name="targetMethod" value="backupData" /> 
  </bean> 

  <bean id="fileTransferJob" 
        class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean"> 
    <property name="targetObject" ref="fileTransferService" /> 
    <property name="targetMethod" value="transFile" /> 
  </bean> 

  <bean id="dataSyncJob" 
        class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean"> 
    <property name="targetObject" ref="dataSyncService" /> 
    <property name="targetMethod" value="syncData" /> 
  </bean> 

  <!-- Simple Trigger, run every 15 seconds -->
  <bean id="dataStoreTrigger" 
        class="org.springframework.scheduling.quartz.SimpleTriggerBean">
    <property name="jobDetail" ref="dataStoreJob" />
    <property name="repeatInterval" value="5000" /> <!-- 5000  -->
    <property name="startDelay" value="10000" />  <!-- 10000  -->
  </bean>
  
  <bean id="addMissedCutImageTrigger" 
        class="org.springframework.scheduling.quartz.SimpleTriggerBean">
    <property name="jobDetail" ref="addMissedCutImageJob" />
    <property name="repeatInterval" value="15000" /> <!-- 15000  -->
    <property name="startDelay" value="17500" /> <!-- 17500  -->
  </bean>

  <!-- Cron Trigger, every day 16:50 -->
  <!-- 秒，分，时，月的某天，月，星期的某天，年；其中年不是必须的，也就是说任何一个表达式最少需要六项 -->
  <bean id="dataBackupTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
    <property name="jobDetail" ref="dataBackupJob" />
    <property name="cronExpression" value="0 50 16 * * ?"/>
  </bean>
  
  <bean id="fileTransferTrigger" 
        class="org.springframework.scheduling.quartz.SimpleTriggerBean">
    <property name="jobDetail" ref="fileTransferJob" />
    <property name="repeatInterval" value="10000" /> <!-- 60000   -->
    <property name="startDelay" value="20000" /> <!-- 20000  -->
  </bean>
  
  <bean id="dataSyncTrigger" 
        class="org.springframework.scheduling.quartz.SimpleTriggerBean">
    <property name="jobDetail" ref="dataSyncJob" />
    <property name="repeatInterval" value="20000" /> <!-- 20000  -->
    <property name="startDelay" value="25000" /> <!-- 25000  -->
  </bean>

  <bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
    <property name="jobDetails">
      <list>
        <ref bean="dataStoreJob" />
        <ref bean="addMissedCutImageJob" />
        <ref bean="dataBackupJob" />
        <!--<ref bean="fileTransferJob" />-->
        <ref bean="dataSyncJob" />
      </list>
    </property>
    <property name="triggers">
      <list>
        <ref bean="dataStoreTrigger" />
        <ref bean="addMissedCutImageTrigger" />
        <ref bean="dataBackupTrigger" />
        <!--<ref bean="fileTransferTrigger" />-->
        <ref bean="dataSyncTrigger" />
      </list>
    </property>
  </bean>

</beans>