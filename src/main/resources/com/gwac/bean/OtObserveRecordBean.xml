<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
  
  
  <bean class="com.gwac.action.GetCutImageList">
    <property name="oorDao" ref="otORDao" />
  </bean>
  
  <bean class="com.gwac.action.OtObserveRecordAction">
    <property name="otorDao" ref="otORDao" />
  </bean>

  <bean id="otORService" class="com.gwac.service.OtObserveRecordServiceImpl" >
    <property name="otorDao" ref="otORDao" />
    <property name="ufuDao" ref="ufuDao" />
    <property name="otcDao" ref="otcDao" />
    <property name="otnDao" ref="otnDao" />
    <property name="otLv2Dao" ref="otbDao" />
    <property name="ffDao" ref="ffDao" />
    <property name="ffcDao" ref="ffcDao" />
    <property name="dpmDao" ref="dpmDao" />	
    <property name="rootPath" value="${gwac.data.root.directory}" />	
  </bean>
	
  <bean id="otORDao" class="com.gwac.dao.OtObserveRecordDAOImpl" >
    <property name="sessionFactory" ref="sessionFactory" />
    <property name="clazz">
      <value>com.gwac.model.OtObserveRecord</value>
    </property>
  </bean>
	
  <bean id="ffDao" class="com.gwac.dao.FitsFileDAOImpl" >
    <property name="sessionFactory" ref="sessionFactory" />
    <property name="clazz">
      <value>com.gwac.model.FitsFile</value>
    </property>
  </bean>
	
  <bean id="otcDao" class="com.gwac.dao.OTCatalogDaoImpl" />
	
  <bean id="otnDao" class="com.gwac.dao.OtNumberDaoImpl" >
    <property name="sessionFactory" ref="sessionFactory" />
    <property name="clazz">
      <value>com.gwac.model.OtNumber</value>
    </property>
  </bean>
	
</beans>