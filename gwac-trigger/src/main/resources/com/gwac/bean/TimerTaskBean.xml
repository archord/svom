  <bean id="sciObjTrgJob" 
        class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean"> 
    <property name="targetObject" ref="sciObjTriggerService" /> 
    <property name="targetMethod" value="startJob" /> 
    <property name="concurrent" value="false" />
  </bean> 
  
  
  <bean id="sciObjTrgTrigger" 
        class="org.springframework.scheduling.quartz.SimpleTriggerBean">
    <property name="jobDetail" ref="sciObjTrgJob" />
    <property name="repeatInterval" value="15000" />  
    <property name="startDelay" value="5000" />   
  </bean>
  
  <bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
    <property name="triggers">
      <list>
        <ref bean="sciObjTrgTrigger" />
      </list>
    </property>
  </bean>

</beans>